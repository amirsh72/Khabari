@model List<_1_KhabariQuery.Contracts.OneNews.OneNewsModel>
<section class="container mt-5">
    <h5 class="IRANSansWeb_Medium text-center bt-color">آخرین اخبـارها و رویدادها</h5>
    <div id="owl-topnews" class="owl-carousel">
        @foreach(var item in Model)
        {
            <div class="card p-3">
                <a href="#" class="relative">
                    <img src="~/Images/@item.Picture" class="mb-3 img-fluid rad12"  width="1000" height="1200"/>
                    <div class="covernews d-flex flex-row justify-content-between px-3 text-white IRANSansWeb_Medium ">
                        <span class="bottom_p"><i class="fas fa-clock ml-1"></i>@item.PublishDate</span>
                        <span><i class="fas fa-eye ml-1"></i>28 بار</span>
                        <span><i class="fas fa-comment ml-1"></i>6</span>
                    </div>
                </a>


                <p>@item.Body.Substring(0,20)</p>

                <a href="#" class="text-danger IRANSansWeb_Medium text-center pb-3">مشاهده خبر »</a>
            </div>
        }
        






    </div>

</section>